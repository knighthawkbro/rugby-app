  <div class = "top-header">
    <%= link_to "W.I.T Rugby", root_path, id: 'logo' %>
  </div>
  <div class="container">
    <nav>
      <ul class="nav navbar-nav center-block">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Schedule", schedule_path %></li>
        <li><%= link_to "Roster", roster_path %></li>
        <li><%= link_to "Awards", awards_path %></li>
