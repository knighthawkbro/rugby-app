<div class="jumbotron text-center">
    <h1>Sign-up for the team!</h1>
    
    <%= form_for(@applicant) do |f| %>
    
        <p>
            <%= f.label :name %>
            <%= f.text_field :name %>
        </p>
        
        <p>
            <%= f.label :email %>
            <%= f.text_field :email %>
        </p>
        
        <p>
            <%= f.label :school %>
            <%= f.select :school, ['Wentworth','MCPHS','MassArt','Wheelock', 'Emmanuel'], :prompt => 'Select One' %>
        </p>
        
        <p>
            <%= f.label :year %>
            <%= f.select :year, ['Freshman', 'Sophomore', 'Junior', 'Senior', '5th Year'], :prompt => 'Select One' %>
        </p>
        
        <p>
            <%= f.label :experience %><br>
            <%= f.text_area :experience %>
        </p>
        
        <%= f.submit "Submit" %>
    
    <% end %>    
</div>
